<div class="question-page">
  <header class="question-header">
    <h1><%= @question.title %></h1>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <% @question.answers.each do |answer| %>
          <p><strong>Created: </strong><%= answer.created_at.strftime("%B %d, %Y")  %></p>
          <p><%= answer.content %></p>
        <% end %>
      </div>
    </div>
  </div>


<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h3 class="subsec-title">Comments</h3>
      <%= render 'comments/comments'  %>
      <% if signed_in? %>
      <%= render 'comments/form'  %>
      <% end %>
    </div>
  </div>
</div>


