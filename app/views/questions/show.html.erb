<div class="question-page">
  <header class="question-header">
    <h1><%= @question.title %></h1>
    <%= link_to "Add Answer", new_question_answer_path(@question), class: "btn btn-success btn-lg"   %>
    <% if signed_in? && @question.user == current_user %>
    <div class="actions">
      <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_question_path(@question) %>
      <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, @question, method: :delete, data: { confirm: "Are you sure to delete this question?" } %>
    </div>
    <% end %>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <p><strong>Created: </strong><%= @question.created_at.strftime("%B %d, %Y")  %></p>
        <p><%= @question.content %></p>
      </div>
    </div>
  </div>
  <div class="answer-section">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="separator"></div>
            <h3 class="subsec-title"><%= @question.answers.count %> Answers</h3>
            <% @question.answers.each do |answer| %>
              <p><strong>Created: </strong><%= answer.created_at.strftime("%B %d, %Y")  %></p>
              <span><%= link_to answer.content, question_answer_path(@question,answer)  %></span>
            <% end %>
        </div>
      </div>
    </div>
  </div>

<div class="comments-section">
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
    <div class="separator"></div>
      <h3 class="subsec-title">Comments</h2>
      <%= render 'comments/comments'  %>
      <% if signed_in? %>
        <%= render 'comments/form'  %>
      <% end %>
    </div>
  </div>
</div>  
</div>

  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="votes">
          <h2>Votos</h2>
        </div>

        <div class="comments">
          <h2>Comentarios</h2>
        </div>
      </div>
    </div>
  </div>
</div>

