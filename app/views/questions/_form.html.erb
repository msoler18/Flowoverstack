<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title  %></h1>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Title Question" %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control input-lg", placeholder: "Your Question" %>
        </div>
        <div>
          <%= f.submit "Create Question", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
